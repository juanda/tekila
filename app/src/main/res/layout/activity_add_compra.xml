<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jazzyweb.tekila.AddCompraAction">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_compra_concepto"
        android:id="@+id/lblConcepto"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/etxtConcepto"
        android:layout_alignParentEnd="false"
        android:gravity="bottom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxtConcepto"
        android:layout_toEndOf="@+id/lblConcepto"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lblConcepto"
        android:hint="Ej: Tomates" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_compra_quien_paga"
        android:id="@+id/btnQuienPaga"
        android:layout_below="@+id/lblCuando"
        android:layout_marginTop="45dp"
        android:layout_alignRight="@+id/lblConcepto"
        android:layout_alignEnd="@+id/lblConcepto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_compra_quien_participa"
        android:id="@+id/btnQuienParticipa"
        android:layout_alignTop="@+id/btnQuienPaga"
        android:layout_toRightOf="@+id/btnQuienPaga"
        android:layout_toEndOf="@+id/btnQuienPaga"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btnQuienPaga" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_compra_fecha"
        android:id="@+id/lblCuando"
        android:layout_below="@+id/lblConcepto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etxtDate"
        android:layout_toEndOf="@+id/lblCuando"
        android:text="10/10/2014, 15:24:44"
        android:layout_alignBottom="@+id/lblCuando"
        android:layout_alignRight="@+id/etxtConcepto"
        android:layout_alignEnd="@+id/etxtConcepto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/lblQuienPaga"
        android:layout_below="@+id/btnQuienPaga"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:text="Pagan: juanda, paula" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Participan: juanda, paula, ruth"
        android:id="@+id/lblQuienParticipa"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Compra: 143 â‚¬"
        android:id="@+id/lblTotalCompra"
        android:layout_below="@+id/lblQuienParticipa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:phoneNumber="true" />


</RelativeLayout>
