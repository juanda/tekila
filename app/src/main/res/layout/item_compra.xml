    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="10/11/14 12:45:43"
        android:id="@+id/txtFecha"
        android:layout_toEndOf="@+id/txtPagadores"
        android:layout_alignTop="@+id/txtParticipantes"
        android:layout_alignRight="@+id/txtCantidad"
        android:layout_alignEnd="@+id/txtCantidad"
        android:textAlignment="viewEnd" />

</RelativeLayout>